{
  "extends": ["stylelint-config-standard"],
  "plugins": [
    "stylelint-a11y",
    "stylelint-order"
  ],
  "rules": {
    "number-leading-zero": "never",
    "value-keyword-case": ["lower", {
      "ignoreProperties": ["/^(b|B)ackground$/", "flex-direction"]
    }],
    "order/properties-order": [
      "top",
      "bottom",
      "right",
      "left",
      "width",
      "height",
      "margin",
      "padding",
      "color",
      "text-align",
      "text-decoration",
      "font-size",
      "border",
      "border-radius"
    ]
  }
}
